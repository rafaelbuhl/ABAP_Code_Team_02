{
  update;
  delete;
  field ( readonly ) Customerid;
  field ( readonly : update ) Orderid;
  field ( mandatory : create ) Orderid;
  field ( readonly ) CreatedBy, CreatedAt, LocalLastChangedBy, LocalLastChangedAt, LastChangedAt;

  //  field ( readonly ) Orderid;


  //  draft action Activate optimized;
  //  draft action Discard;
  //  draft action Edit;
  //  draft action Resume;
  //  draft determine action Prepare;

  determination updateSalesVolume on save { create; delete; field OrderTotal; field Currency; field Status; }

  association _Customer { with draft; }
  mapping for zcs02_custorders corresponding
    {
      Orderid            = orderid;
      Customerid         = customerid;
      OrderDate          = order_date;
      OrderTotal         = order_total;
      Discount           = discount;
      Info               = info;
      Status             = status;
      Currency           = currency;
      CreatedBy          = created_by;
